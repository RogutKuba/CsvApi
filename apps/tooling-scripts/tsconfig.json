{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@billing/base/*": ["../../packages/base/src/*"],
      "@billing/backend-common/*": ["../../packages/backend-common/src/*"],
      "@billing/database/*": ["../../packages/database/src/*"]
    }
  },
  "include": [
    ".",
    "../../packages/backend-common/src/**/*.ts",
    "../../packages/database/src/**/*.ts",
    "../../packages/base/src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "extends": "@billing/tsconfig/base.json"
}
