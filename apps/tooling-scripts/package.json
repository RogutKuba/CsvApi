{
  "name": "@starter/tooling-scripts",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "run-script": "node --env-file=.env.local dist/runner.js",
    "build": "swc src --out-dir dist --source-maps true src",
    "dev": "swc src --out-dir dist --source-maps true src && node --env-file .env.local dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@starter/backend-common": "workspace:*",
    "@starter/base": "workspace:*",
    "@starter/database": "workspace:*",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@starter/eslint-config-custom": "workspace:*",
    "@starter/tsconfig": "workspace:*",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.2.2"
  }
}
