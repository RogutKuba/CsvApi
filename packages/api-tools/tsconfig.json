{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@starter/api-tools/*": ["./src/*"],
      "@starter/api-routes/*": ["../api-routes/src/*"],
      "@starter/database/*": ["../database/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "extends": "@starter/tsconfig/base.json",
  "include": [".", "../api-routes/src/**/*.ts", "../database/src/**/*.ts"]
}
