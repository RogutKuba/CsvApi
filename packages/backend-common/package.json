{
  "name": "@billing/backend-common",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch src",
    "build": "swc src --out-dir dist --source-maps true src",
    "build-tsup": "tsup src",
    "watch": "tsup --watch src",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.501.0",
    "@billing/base": "workspace:*",
    "@billing/database": "workspace:*",
    "@billing/logger": "workspace:*",
    "@t3-oss/env-core": "^0.7.1",
    "crypto": "^1.0.1",
    "drizzle-orm": "^0.29.1",
    "jose": "^5.1.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@billing/eslint-config-custom": "workspace:*",
    "@billing/tsconfig": "workspace:*",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@types/node": "^18.11.9",
    "jest-presets": "workspace:*",
    "typescript": "^5.2.2"
  }
}
