{
  "compilerOptions": {
    "lib": ["ES2015"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@billing/backend-common/*": ["./src/*"],
      "@billing/database/*": ["../database/src/*"],
      "@billing/base": ["../base/src/index.ts"],
      "@billing/logger": ["../logger/src/logger.ts"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "extends": "@billing/tsconfig/base.json",
  "include": [
    ".",
    "../database/src/**/*.ts",
    "../base/src/index.ts",
    "../logger/src/logger.ts"
  ]
}
